CREATE TABLE
  chatroom (
    room_id INT (11) AUTO_INCREMENT PRIMARY KEY,
    room_name VARCHAR(255) NOT NULL,
    room_desc TEXT,
    create_date DATETIME NOT NULL DEFAULT CURRENT_TIMESTAMP,
    del_frag VARCHAR(1) NOT NULL,
    update_date DATETIME NULL DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP
  );

CREATE TABLE
  chatroom_room (
    msg_id INT (11) AUTO_INCREMENT PRIMARY KEY,
    msg_username VARCHAR(255) NOT NULL,
    msg_msg VARCHAR(255) NOT NULL,
    create_date DATETIME NOT NULL DEFAULT CURRENT_TIMESTAMP,
    room_id INT (11) NOT NULL,
    del_frag VARCHAR(1) NULL
  );

  CREATE TABLE todolist (
    task_id INT(11) AUTO_INCREMENT PRIMARY KEY,
    task_name VARCHAR(255) ,
    task_desc VARCHAR(255) ,
    create_date DATETIME NOT NULL DEFAULT CURRENT_TIMESTAMP,
    update_date DATETIME NOT NULL DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
    del_frag VARCHAR(1) NOT NULL DEFAULT 'N' ,
    succ_frag VARCHAR(1) NOT NULL DEFAULT 'N' ,
    succ_date DATETIME NOT NULL
);
